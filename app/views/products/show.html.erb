<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
          <dl class="dl-horizontal">
            <dt><h3>Reviews</h3></dt>
            <% @reviews.each do |review| %>
            <dd></dd>
            <dt><%= review.user.name %> </dt>
            <dd><%= review.rating %>: <%= review.description %></dd>
            <% if current_user && current_user.name == review.user.name %>
              <dt>Delete:</dt>
              <dd>
                <%= link_to fa_icon('trash'), review_path(review), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
              </dd>
            <% end %>
          </dl>

        <% end %>
        <% if current_user.present? %>
          <%= render "create_review" %>
        <% end %>
      </div>
    </div>


  </article>

</section>
